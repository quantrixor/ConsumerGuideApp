<Page x:Class="ConsumerGuideApp.View.Pages.ServiceManagePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ConsumerGuideApp.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ServiceManagePage">

    <Grid Margin="10" Background="White">
        <StackPanel Margin="10">
            <TextBlock Text="Название услуги:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtServiceName" Margin="0,0,0,10"/>

            <TextBlock Text="Описание:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtDescription" Margin="0,0,0,10" Height="100" TextWrapping="Wrap" AcceptsReturn="True"/>

            <TextBlock Text="Категория услуги:" Margin="0,0,0,5"/>
            <ComboBox x:Name="cbServiceCategory" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="20,0,0,0">
                <Button Content="Сохранить" Width="100" Margin="5" Click="Save_Click"/>
                <Button Content="Отмена" Width="100" Margin="5" Click="Cancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
